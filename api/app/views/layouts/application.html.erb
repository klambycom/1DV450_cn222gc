<!DOCTYPE html>
<html>
<head>
  <title><%= full_title "Title", yield(:title) %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <% flash.each do |type, error| %>
      <div class="alert alert-<%= type %>"><%= error %></div>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
