    <h1>
      <% if @doc.api? %>
        <span class="method method-<%= @doc.method %>"><%= @doc.method %></span>
      <% end %>
      <%= @doc.title %>
      <% if admin? %>
        <small>
          <%= link_to 'Ã„ndra', edit_developers_doc_path(@doc) %>
          <%= render 'delete_form', doc: @doc %>
        </small>
      <% end %>
    </h1>
  </div>

  <div class="content">
    <%= markdown @doc.content %>
  </div>

  <small>Uppdaterades senast den <%= full_date @doc.updated_at %>.</small>
</div>
