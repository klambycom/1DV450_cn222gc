<%= form_for(register, html: { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <%= f.label :firstname, "Förnamn" %>
    <div class="form-field">
      <%= f.text_field :firstname %>
      <%= errors_for register, :firstname %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :lastname, "Efternamn" %>
    <div class="form-field">
      <%= f.text_field :lastname %>
      <%= errors_for register, :lastname %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, "E-postadress" %>
    <div class="form-field">
      <%= f.text_field :email %>
      <%= errors_for register, :email %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, "Lösenord" %>
    <div class="form-field">
      <%= f.password_field :password %>
      <%= errors_for register, :password %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Lösenordet igen" %>
    <div class="form-field">
      <%= f.password_field :password_confirmation %>
      <%= errors_for register, :password_confirmation  %>
    </div>
  </div>

  <div class="form-group">
    <div class="form-buttons">
      <%= f.submit "Registrera mig", class: "btn-primary" %>
    </div>
  </div>
<% end %>
