<% provide :title, "API dokumentation" %>
<% highlight :home %>

<div class="jumbotron">
  <h1>Kom igång</h1>
  <p>Skapa en ny applikation och börja använda API:et</p>
  <%= link_to "Skapa applikation", new_developers_dashboard_path, class: "btn btn-success" %>
</div>

<%= render 'menu' %>

<div id="docs-content">
  <% if @changelog.present? %>
    <div class="page-header">
      <h1>Changelog</h1>
    </div>
    <%= markdown @changelog.content %>
  <% else %>
    <p>Säg till en administratör att skapa ett dokument med namnet changelog.</p>
  <% end %>
</div>
